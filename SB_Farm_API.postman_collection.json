	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Auto-add Authorization header if token exists",
					"if (pm.environment.get('token') && !pm.request.headers.has('Authorization')) {",
					"    pm.request.headers.add({",
					"        key: 'Authorization',",
					"        value: 'Bearer ' + pm.environment.get('token')",
					"    });",
					"}",
					"",
					"// Auto-add Content-Type and Accept headers",
					"if (!pm.request.headers.has('Accept')) {",
					"    pm.request.headers.add({",
					"        key: 'Accept',",
					"        value: 'application/json'",
					"    });",
					"}"
				]
			}
		}
